age = input ("How old are you? ")
boo = age.isnumeric()
if boo:
    print("Thank you I am checking if you can come in....")
    val = int(age)
    if (val >= 21):
        print("You are aloowed in and can drink")
    elif(val >= 19):
        print("Come in but you can't drink")
    else:
        print("You are not allowed in. Not old enough")
else:
    print("We need your age!")
